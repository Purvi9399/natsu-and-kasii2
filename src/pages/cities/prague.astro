<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Prague · Natsu & Kasii</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Fonts: Prague mix of historic elegance + modern clarity -->
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;1,700&family=Space+Grotesk:wght@400;700&family=Great+Vibes&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #f2efe9;
        --card: #ffffff;
        --text: #2d2b31;
        --muted: #7a6f84;
        --accent: #4a5a6a; /* deep slate blue/teal */
        --accent2: #e7d8c9; /* soft parchment */
        --highlight: #c85e3f; /* warm burnt orange */
        --radius: 16px;
        --shadow: 0 38px 100px -15px rgba(72,60,80,0.25);
        --transition: 0.35s cubic-bezier(.3,.1,.25,1);
        --heading: "Playfair Display", serif;
        --body: "Space Grotesk", system-ui,-apple-system,BlinkMacSystemFont,sans-serif;
        --quote: "Great Vibes", cursive;
      }

      * { box-sizing:border-box; }

      body {
        margin: 0;
        font-family: var(--body);
        background: var(--bg);
        color: var(--text);
        line-height:1.55;
        scroll-behavior: smooth;
        position: relative;
        min-height:100vh;
      }

      /* Prague skyline blurred background (e.g., Charles Bridge / Castle) */
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        background: url('/images/prague-blur.jpg') center/cover no-repeat fixed;
        filter: blur(16px) brightness(1.05);
        opacity: 0.14;
        z-index: 0;
        pointer-events: none;
        mix-blend-mode: normal;
      }

      a { color: var(--highlight); text-decoration:none; }
      a:hover { text-decoration: underline; }

      .container {
        max-width: 1080px;
        margin: 0 auto;
        padding: 1.5rem 1rem 5rem;
        position: relative;
        z-index:1;
      }

      .back-btn {
        position: fixed;
        top: 16px;
        right: 16px;
        background: rgba(255,255,255,0.9);
        padding: 8px 14px;
        border-radius: 999px;
        font-size: 0.9rem;
        font-weight:600;
        box-shadow: 0 18px 50px -10px rgba(72,60,80,0.2);
        backdrop-filter: blur(6px);
        z-index:1001;
      }
      .back-btn:hover { background:#fff; }

      .mini-nav {
        display:flex;
        gap:1rem;
        flex-wrap:wrap;
        justify-content:center;
        margin-bottom:1rem;
        position:sticky;
        top:10px;
        z-index:100;
        background: rgba(242,239,233,0.95);
        padding:8px 12px;
        border-radius: 12px;
        box-shadow: 0 12px 40px -10px rgba(72,60,80,0.15);
        font-size:0.9rem;
      }
      .mini-nav a {
        padding:6px 14px;
        border-radius:8px;
        font-weight:600;
        position:relative;
        color: var(--text);
        transition: var(--transition);
      }
      .mini-nav a.active,
      .mini-nav a:hover {
        background: var(--accent);
        color:#fff;
      }

      .hero {
        position: relative;
        text-align: center;
        padding: 2rem 0 1rem;
        overflow: hidden;
      }
      .hero h1 {
        font-family: var(--heading);
        font-size: 3.8rem;
        margin: 0;
        color: var(--accent);
        position: relative;
        z-index:2;
      }
      .subtitle {
        margin: 8px auto 12px;
        max-width: 700px;
        font-size: 1.1rem;
        color: var(--muted);
        position: relative;
        z-index:2;
      }
      .quote {
        font-family: var(--quote);
        font-size:1.1rem;
        margin: 12px auto 4px;
        max-width: 700px;
        position: relative;
        color: #4a3f58;
      }
      .quote small {
        display:block;
        margin-top:4px;
        font-size:0.65rem;
        font-weight:600;
        font-family: var(--body);
        color: #6b6273;
      }

      /* Ambient mist / old-paper float */
      .ambient {
        pointer-events:none;
        position:absolute;
        inset:0;
        z-index:1;
        overflow:hidden;
      }
      .mist {
        position:absolute;
        width:120px;
        height:120px;
        background: radial-gradient(circle at 40% 40%, rgba(232,220,210,0.35), transparent 70%);
        border-radius:50%;
        filter: blur(30px);
        mix-blend-mode: screen;
        animation: sway 25s ease-in-out infinite;
        opacity:0.5;
      }
      @keyframes sway {
        0% { transform: translate(0,0) scale(1); }
        50% { transform: translate(-18px,22px) scale(1.05); }
        100% { transform: translate(0,0) scale(1); }
      }

      .section {
        margin: 3.5rem 0;
        position: relative;
      }
      .section h2 {
        font-family: var(--heading);
        font-size:2.6rem;
        margin-bottom:6px;
        display:inline-block;
        position: relative;
      }
      .section h2::after {
        content:"";
        display:block;
        height:4px;
        width:60px;
        background: var(--highlight);
        border-radius:2px;
        margin-top:6px;
      }
      .section .desc {
        margin:8px 0 18px;
        max-width:820px;
        color: var(--muted);
      }

      .grid { display:grid; gap:1.25rem; }

      .card {
        background: var(--card);
        border-radius: var(--radius);
        padding:1.3rem 1.55rem;
        position:relative;
        overflow:hidden;
        box-shadow: var(--shadow);
        transition: var(--transition);
        display:flex;
        flex-direction:column;
        min-height:170px;
        opacity:0;
        transform: translateY(15px);
      }
      .card.visible { opacity:1; transform: translateY(0); }
      .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 45px 110px -15px rgba(72,60,80,0.35);
      }
      .card h3 {
        margin:0 0 6px;
        font-family: var(--heading);
        font-size:1.4rem;
      }
      .card p { margin:0; font-size:0.95rem; color:#4a3f5f; flex:1; }
      .label {
        display:inline-block;
        background: var(--accent2);
        color:#4b3f5f;
        padding:4px 10px;
        border-radius:999px;
        font-size:0.6rem;
        font-weight:600;
        margin-bottom:6px;
      }

      .pill-list {
        display:flex;
        gap:12px;
        flex-wrap:wrap;
        margin:12px 0 6px;
      }
      .pill {
        background: var(--highlight);
        color:white;
        padding:10px 18px;
        border-radius:999px;
        font-weight:600;
        font-size:0.85rem;
      }

      .postcards {
        display:flex;
        gap:18px;
        flex-wrap:wrap;
        margin:2rem 0 1rem;
        justify-content:center;
      }
      .flip-card {
        background: transparent;
        width: 300px;
        height: 200px;
        perspective: 1000px;
        position: relative;
      }
      .flip-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: left;
        transition: transform 0.8s;
        transform-style: preserve-3d;
        border-radius: 14px;
      }
      .flip-card:hover .flip-inner { transform: rotateY(180deg); }
      .flip-front,
      .flip-back {
        position: absolute;
        width:100%;
        height:100%;
        backface-visibility: hidden;
        border-radius:14px;
        overflow:hidden;
        box-shadow: 0 28px 60px -10px rgba(0,0,0,0.08);
        display:flex;
        flex-direction:column;
        justify-content:flex-end;
        padding:14px;
        font-size:0.85rem;
      }
      .flip-front img {
        position:absolute;
        inset:0;
        width:100%;
        height:100%;
        object-fit: cover;
        filter: brightness(1);
      }
      .flip-front .overlay {
        position: relative;
        z-index:2;
        background: rgba(0,0,0,0.25);
        padding:8px 12px;
        border-radius:10px;
        color:#fff;
        backdrop-filter: blur(4px);
      }
      .flip-back {
        background: var(--card);
        transform: rotateY(180deg);
        padding:18px;
        display:flex;
        flex-direction:column;
      }
      .flip-back .title {
        margin:0;
        font-family: var(--heading);
        font-size:1rem;
      }
      .flip-back .note {
        margin:6px 0 0;
        font-size:0.75rem;
        flex:1;
        color:#4a3f5f;
      }

      .todo-filters {
        display:flex;
        gap:10px;
        flex-wrap:wrap;
        margin:10px 0 16px;
      }
      .todo-filters button {
        background: rgba(255,255,255,0.15);
        border:1px solid rgba(72,60,80,0.5);
        padding:8px 16px;
        border-radius:999px;
        cursor:pointer;
        color: var(--text);
        font-weight:600;
        transition: var(--transition);
        backdrop-filter: blur(6px);
      }
      .todo-filters button.active {
        background: var(--highlight);
        color:#fff;
        border-color: var(--highlight);
      }
      .todo-grid {
        display:grid;
        gap:1.25rem;
        grid-template-columns: repeat(auto-fit,minmax(240px,1fr));
      }
      .todo-card {
        position:relative;
        background: var(--card);
        border-radius: var(--radius);
        padding:1.25rem 1.5rem;
        box-shadow: var(--shadow);
        display:flex;
        flex-direction:column;
        transition: var(--transition);
        min-height:170px;
        opacity:0;
        transform: translateY(15px);
      }
      .todo-card.visible { opacity:1; transform:translateY(0); }
      .todo-card:hover { transform: translateY(-3px); }
      .todo-card h3 { margin:0 0 6px; font-family: var(--heading); font-size:1.2rem; }
      .todo-card small { margin-top:auto; font-size:0.65rem; opacity:.75; }

      .save-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(255,255,255,0.95);
        border-radius:50%;
        width:32px;
        height:32px;
        display:flex;
        align-items:center;
        justify-content:center;
        cursor:pointer;
        border:1px solid rgba(72,60,80,0.4);
        transition: var(--transition);
        padding:0;
      }
      .save-btn svg {
        width: 16px;
        height: 16px;
        stroke: var(--highlight);
        fill: none;
        transition: var(--transition);
      }
      .save-btn.saved {
        background: var(--highlight);
        border-color: var(--highlight);
      }
      .save-btn.saved svg {
        stroke: white;
        fill: white;
      }

      .itinerary-toolbar {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: #fff;
        border-radius: 14px;
        padding: 14px 18px;
        box-shadow: 0 40px 100px -10px rgba(72,60,80,0.3);
        display: flex;
        gap: 16px;
        align-items: flex-start;
        font-size: 0.85rem;
        z-index: 1200;
        max-width: 380px;
        flex-wrap: wrap;
        border:1px solid rgba(72,60,80,0.3);
      }
      .saved-list {
        display:flex;
        flex-wrap:wrap;
        gap:6px;
        margin-bottom:4px;
      }
      .saved-pill {
        background: rgba(200,94,63,0.1);
        padding: 4px 10px;
        border-radius:999px;
        font-size:0.6rem;
        display:flex;
        align-items:center;
        gap:4px;
      }
      .itinerary-actions {
        display:flex;
        gap:8px;
        flex-wrap:wrap;
      }
      .itinerary-actions button {
        background: var(--highlight);
        border:none;
        color:white;
        padding:6px 12px;
        border-radius:999px;
        cursor:pointer;
        font-size:0.7rem;
        font-weight:600;
        transition: var(--transition);
      }
      .itinerary-actions button.secondary {
        background: #666;
      }
      @keyframes pill-bounce {
        0% { transform: scale(1); }
        30% { transform: scale(1.15); }
        60% { transform: scale(0.95); }
        100% { transform: scale(1); }
      }
      .saved-pill.bounce { animation: pill-bounce 0.6s ease; }

      .memory {
        display:grid;
        gap:24px;
        grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
        margin:1rem 0 2rem;
      }
      .memory-text {
        background: var(--card);
        border-radius: var(--radius);
        padding:1.5rem;
        position: relative;
        box-shadow: var(--shadow);
      }
      .memory-text h3 {
        margin-top:0;
        font-family: var(--heading);
        font-size:1.6rem;
      }
      .memory-text p {
        margin:0.5rem 0 0;
        font-size:0.95rem;
      }

      .itinerary-box {
        background: var(--card);
        border-radius: var(--radius);
        padding:1.5rem 1.75rem;
        display:flex;
        flex-direction:column;
        gap:14px;
        box-shadow: var(--shadow);
        position:relative;
      }
      .itinerary-box h2 {
        margin:0;
        font-family: var(--heading);
        font-size:2rem;
      }
      .field {
        flex:1;
        min-width:140px;
        display:flex;
        flex-direction:column;
      }
      .field label {
        font-size:0.65rem;
        font-weight:600;
        margin-bottom:4px;
        text-transform:uppercase;
        letter-spacing:0.8px;
        color:#666;
      }
      .field select,
      .field input {
        padding:10px 12px;
        border-radius:8px;
        border:1px solid #ddd;
        font-size:0.95rem;
        outline:none;
      }
      .btn {
        background: var(--highlight);
        color:white;
        border:none;
        padding:12px 18px;
        border-radius:999px;
        cursor:pointer;
        font-weight:600;
        font-size:1rem;
        transition: var(--transition);
      }
      .btn:hover { filter:brightness(1.05); }

      @media (max-width:960px) {
        .grid { grid-template-columns:1fr; }
        .memory { grid-template-columns:1fr; }
      }
    </style>
  </head>

