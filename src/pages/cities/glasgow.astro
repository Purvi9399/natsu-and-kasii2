    <script>
      const DISPLAY_NAMES = {
        "kelvingrove": "Kelvingrove Art Gallery",
        "cathedral-necropolis": "Glasgow Cathedral & Necropolis",
        "riverside-museum": "Riverside Museum",
        "the-lighthouse": "The Lighthouse",
        "botanic-west-end": "West End & Botanic Gardens",
        "necropolis-view": "Necropolis Overlook",
        "the-lighthouse-view": "The Lighthouse View",
        "willow-tea-rooms": "Willow Tea Rooms",
        "papercup": "Papercup Coffee Company",
        "king-tuts": "King Tut's Wah Wah Hut",
        "barrowland": "Barrowland Ballroom",
        "sharmanka": "Sharmanka Kinetic Gallery",
        "hidden-lane": "The Hidden Lane"
      };
      function getDisplayName(id) {
        return DISPLAY_NAMES[id] || id.replace(/[-_]/g, " ");
      }

      const STORAGE_KEY = "glasgow-saved-items";
      let previousSaved = [];

      function getSaved() {
        try {
          const raw = localStorage.getItem(STORAGE_KEY);
          return raw ? JSON.parse(raw) : [];
        } catch { return []; }
      }
      function setSaved(arr) {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(arr));
        refreshToolbar();
      }
      function toggleSaved(id) {
        let saved = getSaved();
        if (saved.includes(id)) saved = saved.filter(s => s !== id);
        else saved.push(id);
        setSaved(saved);
        updateCardState();
      }
      function updateCardState() {
        const saved = getSaved();
        document.querySelectorAll(".save-btn").forEach(btn => {
          const parent = btn.closest("[data-id]");
          if (!parent) return;
          const id = parent.dataset.id;
          if (saved.includes(id)) btn.classList.add("saved");
          else btn.classList.remove("saved");
        });
      }
      function updateSummary() {
        const summaryEl = document.getElementById("itinerary-summary");
        const saved = getSaved();
        if (!saved.length) {
          summaryEl.textContent = "";
          return;
        }
        const names = saved.map((id, idx) => `${idx + 1}. ${getDisplayName(id)}`);
        const baseUrl = `${window.location.origin}${window.location.pathname}`;
        const param = encodeURIComponent(saved.join(","));
        const shareLink = `${baseUrl}?saved=${param}`;
        summaryEl.innerHTML = `
          <strong>Today's Glasgow itinerary:</strong> ${names.join(" Â· ")}.<br/>
          Recommended by <em>Natsu & Kasii</em>. 
          <a href="${shareLink}" style="color: var(--accent); text-decoration:underline;">View / share this</a>
        `;
      }
      function refreshToolbar() {
        const toolbar = document.getElementById("itinerary-toolbar");
        const saved = getSaved();
        const savedList = document.getElementById("saved-list");
        savedList.innerHTML = "";
        if (!saved.length) {
          toolbar.style.display = "none";
          previousSaved = [];
          updateSummary();
          return;
        }
        toolbar.style.display = "flex";
        const newlyAdded = saved.filter(id => !previousSaved.includes(id));
        saved.forEach(id => {
          const pill = document.createElement("div");
          pill.className = "saved-pill";
          pill.textContent = getDisplayName(id);
          const x = document.createElement("span");
          x.style.marginLeft = "6px";
          x.style.cursor = "pointer";
          x.textContent = "Ã";
          x.addEventListener("click", () => toggleSaved(id));
          pill.appendChild(x);
          if (newlyAdded.includes(id)) {
            pill.classList.add("bounce");
            pill.addEventListener("animationend", () => pill.classList.remove("bounce"));
          }
          savedList.appendChild(pill);
        });
        previousSaved = [...saved];
        updateSummary();
      }

      document.addEventListener("DOMContentLoaded", () => {
        // progressive reveal
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(e => {
            if (e.isIntersecting) {
              e.target.classList.add("visible");
              observer.unobserve(e.target);
            }
          });
        }, { threshold: 0.15 });
        document.querySelectorAll(".card, .todo-card").forEach(el => observer.observe(el));

        // mini-TOC highlight
        const sectionObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            const id = entry.target.id;
            const link = document.querySelector(`.mini-nav a[data-target="${id}"]`);
            if (link && entry.isIntersecting) {
              document.querySelectorAll(".mini-nav a").forEach(a => a.classList.remove("active"));
              link.classList.add("active");
            }
          });
        }, { rootMargin: "-40% 0px -50% 0px" });
        document.querySelectorAll(".section").forEach(s => sectionObserver.observe(s));

        // save listeners
        document.querySelectorAll(".save-btn").forEach(btn => {
          btn.addEventListener("click", (e) => {
            e.stopPropagation();
            const card = btn.closest("[data-id]");
            if (!card) return;
            toggleSaved(card.dataset.id);
          });
        });

        // filters
        document.querySelectorAll(".todo-filters button").forEach(b => {
          b.addEventListener("click", () => {
            document.querySelectorAll(".todo-filters button").forEach(x => x.classList.remove("active"));
            b.classList.add("active");
            const filter = b.dataset.filter;
            document.querySelectorAll(".todo-card").forEach(card => {
              if (filter === "all" || card.dataset.category === filter) card.style.display="flex";
              else card.style.display="none";
            });
          });
        });

        // restore saved from URL
        const params = new URLSearchParams(window.location.search);
        if (params.has("saved")) {
          try {
            const incoming = decodeURIComponent(params.get("saved") || "");
            const list = incoming.split(",").filter(Boolean);
            setSaved(Array.from(new Set([...getSaved(), ...list])));
          } catch {}
        } else {
          refreshToolbar();
        }
        updateCardState();
      });

      // share / copy
      document.getElementById("copy-link").addEventListener("click", () => {
        const saved = getSaved();
        if (!saved.length) return;
        const param = encodeURIComponent(saved.join(","));
        const url = `${window.location.origin}${window.location.pathname}?saved=${param}`;
        const names = saved.map((id, idx) => `${idx+1}. ${getDisplayName(id)}`).join("\n");
        const text = `Today's Glasgow itinerary:\n${names}\n\nRecommended by Natsu & Kasii\n${url}`;
        navigator.clipboard.writeText(text);
        alert("Itinerary copied!");
      });
      document.getElementById("share-whatsapp").addEventListener("click", () => {
        const saved = getSaved();
        if (!saved.length) return;
        const baseUrl = `${window.location.origin}${window.location.pathname}`;
        const param = encodeURIComponent(saved.join(","));
        const shareLink = `${baseUrl}?saved=${param}`;
        const names = saved.map((id, idx) => `${idx+1}. ${getDisplayName(id)}`).join("\n");
        const summary = `My Glasgow mini-itinerary:\n${names}\n\nRecommended by Natsu & Kasii\n${shareLink}`;
        window.open(`https://wa.me/?text=${encodeURIComponent(summary)}`, "_blank");
      });
      document.getElementById("share-email").addEventListener("click", () => {
        const saved = getSaved();
        if (!saved.length) return;
        const param = encodeURIComponent(saved.join(","));
        const url = `${window.location.origin}${window.location.pathname}?saved=${param}`;
        window.location.href = `mailto:?subject=My Glasgow Mini-Itinerary&body=${encodeURIComponent("Here's what I saved:\n" + url)}`;
      });
      document.getElementById("clear-itinerary").addEventListener("click", () => {
        localStorage.removeItem(STORAGE_KEY);
        updateCardState();
        refreshToolbar();
      });

      // WhatsApp custom itinerary
      document.getElementById("whatsapp-glasgow").addEventListener("click", () => {
        const vibe = document.getElementById("vibe").value;
        const people = document.getElementById("people").value;
        const dates = document.getElementById("dates").value;
        const saved = getSaved();
        const namesList = saved.map((id, idx) => `${idx+1}. ${getDisplayName(id)}`).join("\n");
        let msg = `This is your Glasgow mini-itinerary for today:\n${namesList}\n\nVibe: ${vibe}\nGroup size: ${people}`;
        if (dates.trim()) msg += `\nDates: ${dates}`;
        msg += `\nRecommended by Natsu & Kasii.`;
        const phone = "1234567890"; // replace with real number
        window.open(`https://wa.me/${phone}?text=${encodeURIComponent(msg)}`, "_blank");
      });
    </script>
