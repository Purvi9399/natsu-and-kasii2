    <style>
      :root {
        --bg: #f0f4f7;
        --card: #ffffff;
        --text: #1f2d3a;
        --muted: #5f6c7a;
        --accent: #045d6b;
        --accent2: #62a5b3;
        --highlight: #d9a066;
        --radius: 14px;
        --shadow: 0 30px 80px -10px rgba(4,93,107,0.15);
        --transition: 0.3s cubic-bezier(.3,.2,.2,1);
        --heading: "Libre Baskerville", serif;
        --body: "Space Grotesk", sans-serif;
        --quote: "Dancing Script", cursive;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: var(--body);
        background: var(--bg);
        color: var(--text);
        scroll-behavior: smooth;
        padding: 60px 1rem 140px;
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }

      .container { max-width: 1000px; margin: 0 auto; }

      .back { font-size: 0.9rem; margin-bottom: 6px; }
      .back a { font-weight: 600; }

      .mini-nav {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 0.85rem;
      }
      .mini-nav a {
        padding: 7px 14px;
        border-radius: 999px;
        background: rgba(4,93,107,0.1);
        font-weight: 600;
        transition: background var(--transition);
      }
      .mini-nav a.active,
      .mini-nav a:hover {
        background: var(--accent2);
        color: #fff;
      }

      .hero {
        text-align: center;
        margin-bottom: 1.5rem;
        position: relative;
      }
      .hero h1 {
        font-family: var(--heading);
        font-size: 3.4rem;
        margin: 0;
        color: var(--accent);
      }
      .subtitle {
        font-size: 1rem;
        color: var(--muted);
        margin-top: 6px;
      }

      .card {
        background: var(--card);
        border-radius: var(--radius);
        padding: 1.25rem 1.5rem;
        box-shadow: var(--shadow);
        transition: transform var(--transition), box-shadow var(--transition);
        position: relative;
        margin-top: 14px;
      }
      .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 40px 100px -10px rgba(4,93,107,0.2);
      }
      .card h3 {
        margin: 0 0 6px;
        font-family: var(--heading);
        font-size: 1.35rem;
      }
      .card p {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.4;
      }

      .label {
        display: inline-block;
        background: var(--highlight);
        color: #1f2d3a;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 0.55rem;
        margin-bottom: 8px;
        font-weight: 600;
      }

      .quotes {
        display: flex;
        flex-direction: column;
        gap: 18px;
        margin: 2rem 0 3rem;
      }
      .quote-box {
        position: relative;
        background: #ffffff;
        border-left: 6px solid var(--accent);
        padding: 16px 18px;
        border-radius: 10px;
        box-shadow: 0 25px 60px -10px rgba(4,93,107,0.12);
        font-family: var(--quote);
        font-size: 1.1rem;
      }
      .quote-box small {
        display: block;
        margin-top: 6px;
        font-family: var(--body);
        font-size: 0.65rem;
        color: var(--muted);
      }

      .section {
        margin: 3rem 0;
      }
      .section h2 {
        font-family: var(--heading);
        font-size: 2.4rem;
        margin-bottom: 6px;
        position: relative;
        display: inline-block;
      }
      .section h2::after {
        content: "";
        display: block;
        height: 4px;
        width: 70px;
        background: var(--accent);
        border-radius: 3px;
        margin-top: 6px;
      }
      .desc {
        margin: 8px 0 16px;
        color: var(--muted);
        max-width: 750px;
      }

      .grid {
        display: grid;
        gap: 1.25rem;
        grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
      }

      /* Postcards flip */
      .postcards {
        display: flex;
        gap: 18px;
        flex-wrap: wrap;
        margin: 1.5rem 0;
        justify-content: center;
      }
      .postcard {
        width: 280px;
        height: 170px;
        perspective: 1000px;
        position: relative;
      }
      .postcard-inner {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 14px;
        transition: transform 0.7s;
        transform-style: preserve-3d;
        box-shadow: 0 30px 80px -10px rgba(4,93,107,0.15);
        cursor: pointer;
      }
      .postcard:hover .postcard-inner {
        transform: rotateY(180deg);
      }
      .postcard-face {
        position: absolute;
        inset: 0;
        backface-visibility: hidden;
        border-radius: 14px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
      }
      .postcard-front img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .postcard-back {
        background: var(--accent);
        color: white;
        transform: rotateY(180deg);
        padding: 14px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .postcard-back .title {
        margin: 0 0 6px;
        font-family: var(--heading);
        font-size: 1rem;
      }
      .postcard-back .note {
        font-size: 0.75rem;
      }

      /* Itinerary builder */
      .itinerary-box {
        background: var(--card);
        border-radius: var(--radius);
        padding: 1.5rem 1.75rem;
        box-shadow: var(--shadow);
        display: flex;
        flex-direction: column;
        gap: 16px;
      }
      .fields {
        display: flex;
        gap: 14px;
        flex-wrap: wrap;
      }
      .field {
        flex: 1;
        min-width: 160px;
        display: flex;
        flex-direction: column;
      }
      .field label {
        font-size: 0.65rem;
        font-weight: 600;
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        color: #555;
      }
      .field select,
      .field input {
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #d3d9e0;
        font-size: 0.9rem;
        outline: none;
      }
      .btn {
        background: var(--accent);
        color: white;
        border: none;
        padding: 12px 18px;
        border-radius: 999px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1rem;
        transition: var(--transition);
        display: inline-block;
      }
      .btn:hover { filter: brightness(1.05); }

      /* Saved itinerary toolbar */
      .itinerary-toolbar {
        background: var(--card);
        position: sticky;
        bottom: 14px;
        right: 14px;
        padding: 14px 18px;
        border-radius: 12px;
        box-shadow: 0 35px 90px -10px rgba(4,93,107,0.2);
        display: none;
        gap: 10px;
        font-size: 0.8rem;
        max-width: 360px;
        margin-top: 30px;
      }
      .itinerary-toolbar.active {
        display: flex;
      }
      .mini-itin-badge {
        background: var(--highlight);
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.55rem;
        margin-bottom: 4px;
        display: inline-block;
        font-weight: 600;
      }
      .itinerary-text {
        font-size: 0.85rem;
        line-height: 1.2;
      }

      .pill {
        background: var(--accent2);
        color: white;
        padding: 6px 14px;
        border-radius: 999px;
        font-size: 0.7rem;
        margin-right: 6px;
        display: inline-block;
        animation: none;
      }
      .pill.bounce {
        animation: bounce 0.4s;
      }
      @keyframes bounce {
        0% { transform: scale(1); }
        30% { transform: scale(1.15); }
        100% { transform: scale(1); }
      }

      .save-heart {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 24px;
        height: 24px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform .3s ease;
      }
      .save-heart svg {
        width: 16px;
        height: 16px;
        stroke: var(--accent);
        fill: transparent;
        stroke-width: 2;
        transition: all .3s ease;
      }
      .save-heart.saved svg {
        fill: var(--accent);
        stroke: #fff;
      }

      @media (max-width: 960px) {
        .grid { grid-template-columns: 1fr; }
        .postcards { flex-direction: column; align-items: center; }
        .mini-nav { justify-content: flex-start; overflow-x: auto; }
      }
    </style>
  </head>

