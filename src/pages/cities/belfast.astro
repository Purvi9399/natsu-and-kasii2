    <script>
      // Utility to slugify names for URL
      function slugify(str) {
        return encodeURIComponent(str.replace(/\s+/g, "-").toLowerCase());
      }

      // Manage saved items in localStorage
      const STORAGE_KEY = "belfast-saved";
      const savedSet = new Set(
        JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]")
      );

      const cards = document.querySelectorAll("[data-id]");
      const toolbar = document.getElementById("itinerary-toolbar");
      const itineraryTextEl = document.getElementById("itinerary-text");

      function updateToolbar() {
        if (savedSet.size === 0) {
          toolbar.classList.remove("active");
          itineraryTextEl.textContent = "No picks yet.";
          return;
        }
        toolbar.classList.add("active");
        const picks = Array.from(savedSet);
        let text = `This is your Belfast mini-itinerary for today:\n`;
        picks.forEach((p, i) => {
          text += `${i + 1}. ${p}\n`;
        });
        text += `Recommended by Natsu & Kasii. View: ${window.location.href.split(
          "#"
        )[0]}`;
        itineraryTextEl.textContent = text;
      }

      function persist() {
        localStorage.setItem(
          STORAGE_KEY,
          JSON.stringify(Array.from(savedSet))
        );
      }

      function toggleSave(cardEl) {
        const id = cardEl.dataset.id;
        const heart = cardEl.querySelector(".save-heart");
        if (savedSet.has(id)) {
          savedSet.delete(id);
          heart.classList.remove("saved");
        } else {
          savedSet.add(id);
          heart.classList.add("saved");
          // pill bounce effect (if we had visible pills)
        }
        persist();
        updateToolbar();
      }

      // Initialize hearts and click
      cards.forEach((card) => {
        const id = card.dataset.id;
        const heartWrapper = card.querySelector(".save-heart");
        if (!heartWrapper) return;
        if (savedSet.has(id)) {
          heartWrapper.classList.add("saved");
          heartWrapper
            .querySelector("svg")
            .classList && heartWrapper.querySelector("svg").classList.add("saved");
        }
        heartWrapper.addEventListener("click", (e) => {
          e.stopPropagation();
          toggleSave(card);
          // small bounce
          heartWrapper.classList.add("bounce");
          setTimeout(() => heartWrapper.classList.remove("bounce"), 400);
        });
      });

      // Prepopulate from URL param if present
      function loadFromURL() {
        const params = new URLSearchParams(window.location.search);
        if (params.has("saved")) {
          const list = params.get("saved").split(",");
          list.forEach((item) => {
            const decoded = decodeURIComponent(item);
            savedSet.add(decoded);
          });
          // reflect in UI
          cards.forEach((card) => {
            if (savedSet.has(card.dataset.id)) {
              const heart = card.querySelector(".save-heart");
              heart?.classList.add("saved");
            }
          });
          persist();
          updateToolbar();
        }
      }

      loadFromURL();
      updateToolbar();

      // Copy link with saved items
      document.getElementById("copy-link").addEventListener("click", () => {
        const picks = Array.from(savedSet).map((s) => encodeURIComponent(s));
        const url = `${window.location.origin}${window.location.pathname}?saved=${picks.join(
          ","
        )}`;
        navigator.clipboard.writeText(url);
        alert("Copied mini-itinerary link!");
      });

      // Share on WhatsApp from toolbar
      document.getElementById("share-whats").addEventListener("click", () => {
        const vibe = document.getElementById("vibe-b").value;
        const people = document.getElementById("people-b").value;
        const dates = document.getElementById("dates-b").value;
        const picks = Array.from(savedSet);
        let msg = `Hi! Here's my Belfast mini-itinerary for today:\n`;
        picks.forEach((p, i) => {
          msg += `${i + 1}. ${p}\n`;
        });
        msg += `Vibe: ${vibe}\nGroup size: ${people}\n`;
        if (dates.trim()) msg += `Dates: ${dates}\n`;
        msg += `Recommended by Natsu & Kasii.\nSee more: ${window.location.href
          .split("#")[0]
          .replaceAll(" ", "%20")}`;

        const phone = "1234567890"; // replace with real WhatsApp number if sending to self
        const url = `https://wa.me/${phone}?text=${encodeURIComponent(msg)}`;
        window.open(url, "_blank");
      });

      // WhatsApp itinerary builder button
      document
        .getElementById("whatsapp-belfast")
        .addEventListener("click", () => {
          const vibe = document.getElementById("vibe-b").value;
          const people = document.getElementById("people-b").value;
          const dates = document.getElementById("dates-b").value;
          const picks = Array.from(savedSet);
          let msg = `Hi! I'd love a custom Belfast itinerary for today.%0A`;
          if (picks.length) {
            msg += `Saved spots:\n`;
            picks.forEach((p, i) => {
              msg += `${i + 1}. ${p}%0A`;
            });
          }
          msg += `Vibe: ${vibe}%0AGroup size: ${people}%0A`;
          if (dates.trim()) msg += `Dates: ${dates}%0A`;
          msg += `Please help me plan something memorable!`;

          const phone = "917999465459"; 
          const url = `https://wa.me/${phone}?text=${msg}`;
          window.open(url, "_blank");
        });

      // Highlight mini-nav based on scroll
      const sections = document.querySelectorAll("section");
      const navLinks = document.querySelectorAll(".mini-nav a");
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((ent) => {
            const id = ent.target.id;
            const link = Array.from(navLinks).find((a) =>
              a.getAttribute("href") === `#${id}`
            );
            if (ent.isIntersecting) {
              navLinks.forEach((a) => a.classList.remove("active"));
              link?.classList.add("active");
            }
          });
        },
        { rootMargin: "-40% 0px -55% 0px", threshold: 0 }
      );
      sections.forEach((sec) => observer.observe(sec));
    </script>
  </body>
