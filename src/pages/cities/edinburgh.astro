    <!-- Mini itinerary toolbar -->
    <div class="itinerary-toolbar" id="itinerary-toolbar">
      <div class="itinerary-summary">
        <div class="mini-itin-badge">Your Edinburgh Mini-Itinerary</div>
        <div id="itinerary-text"></div>
      </div>
      <div class="itinerary-actions">
        <button class="btn sm" id="copy-link">Copy Link</button>
        <button class="btn sm" id="share-whatsapp">Share on WhatsApp</button>
        <button class="btn sm" id="clear-saved">Clear</button>
      </div>
    </div>

    <script>
      // Utility for saved items (localStorage)
      const STORAGE_KEY = "edinburgh-saved";
      function getSaved() {
        try {
          return JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
        } catch {
          return [];
        }
      }
      function setSaved(arr) {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(arr));
        renderToolbar();
      }
      function toggleSaved(id) {
        const current = getSaved();
        if (current.includes(id)) {
          setSaved(current.filter((x) => x !== id));
        } else {
          const updated = [...current, id];
          setSaved(updated);
          const heart = document.querySelector(`.save-heart[data-id="${id}"]`);
          if (heart) {
            heart.classList.add("bounce");
            setTimeout(() => heart.classList.remove("bounce"), 450);
          }
        }
      }
      function getDisplayName(id) {
        return id; // direct name mapping; can be enhanced
      }

      // Initialize saves UI
      document.querySelectorAll(".save-heart").forEach((el) => {
        const id = el.dataset.id;
        const svgWrapper = el;
        const updateState = () => {
          const saved = getSaved();
          if (saved.includes(id)) el.classList.add("saved");
          else el.classList.remove("saved");
        };
        updateState();
        el.addEventListener("click", (e) => {
          e.stopPropagation();
          toggleSaved(id);
          updateState();
        });
      });

      // Progressive reveal
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.15 }
      );
      document.querySelectorAll(".card").forEach((c) => observer.observe(c));

      // TOC active highlight
      const tocLinks = [...document.querySelectorAll(".toc-link")];
      const sections = tocLinks.map((a) => document.getElementById(a.getAttribute("href").slice(1)));
      window.addEventListener("scroll", () => {
        const scrollY = window.scrollY + 120;
        sections.forEach((sec, idx) => {
          if (sec && scrollY >= sec.offsetTop) {
            tocLinks.forEach((l) => l.classList.remove("active"));
            tocLinks[idx].classList.add("active");
          }
        });
      });
      // initial highlight
      window.dispatchEvent(new Event("scroll"));

      // Toolbar rendering
      const toolbar = document.getElementById("itinerary-toolbar");
      const itineraryText = document.getElementById("itinerary-text");
      function renderToolbar() {
        const saved = getSaved();
        if (saved.length === 0) {
          toolbar.classList.remove("active");
          return;
        }
        toolbar.classList.add("active");
        const names = saved.map((id, i) => `${i + 1}. ${getDisplayName(id)}`).join(" • ");
        itineraryText.textContent = `This is the itinerary for today: ${names} — recommended by Natsu & Kasii.`;
      }
      renderToolbar();

      // Copy link (with saved state)
      document.getElementById("copy-link").addEventListener("click", () => {
        const saved = getSaved();
        const param = encodeURIComponent(saved.join(","));
        const base = `${window.location.origin}${window.location.pathname}`;
        const url = `${base}?saved=${param}`;
        navigator.clipboard.writeText(url);
        alert("Copied mini-itinerary link!");
      });

      // WhatsApp share with numbered list
      document.getElementById("share-whatsapp").addEventListener("click", () => {
        const saved = getSaved();
        if (saved.length === 0) return;
        const baseUrl = `${window.location.origin}${window.location.pathname}`;
        const param = encodeURIComponent(saved.join(","));
        const shareLink = `${baseUrl}?saved=${param}`;
        const names = saved
          .map((id, idx) => `${idx + 1}. ${getDisplayName(id)}`)
          .join("\n");
        const textSummary = `My Edinburgh mini-itinerary:\n${names}\n\nRecommended by Natsu & Kasii\n${shareLink}`;
        window.open(`https://wa.me/?text=${encodeURIComponent(textSummary)}`, "_blank");
      });

      // Clear saved
      document.getElementById("clear-saved").addEventListener("click", () => {
        localStorage.removeItem(STORAGE_KEY);
        renderToolbar();
        document.querySelectorAll(".save-heart").forEach((h) => h.classList.remove("saved"));
      });

      // WhatsApp custom itinerary for Edinburgh
      document.getElementById("whatsapp-edinburgh").addEventListener("click", () => {
        const vibe = document.getElementById("vibe-e").value;
        const people = document.getElementById("people-e").value;
        const dates = document.getElementById("dates-e").value;
        let msg = `Hi! I'd love a custom Edinburgh itinerary.%0A`;
        msg += `Vibe: ${vibe}%0A`;
        msg += `Group size: ${people}%0A`;
        if (dates.trim()) msg += `Dates: ${dates}%0A`;
        msg += `Please help me plan an unforgettable trip!`;
        const phone = "1234567890"; // replace with real number
        const url = `https://wa.me/${phone}?text=${msg}`;
        window.open(url, "_blank");
      });

      // On load: parse ?saved= and pre-populate
      (function hydrateFromQuery() {
        const params = new URLSearchParams(window.location.search);
        const savedParam = params.get("saved");
        if (savedParam) {
          const ids = decodeURIComponent(savedParam).split(",");
          setSaved(ids.filter(Boolean));
          // mark hearts
          ids.forEach((id) => {
            const heart = document.querySelector(`.save-heart[data-id="${id}"]`);
            if (heart) heart.classList.add("saved");
          });
        }
      })();
    </script>
