      rel="stylesheet"
    />

    <style>
      :root {
        --bg: #f3f4f7; /* misty stone */
        --card: #ffffff;
        --text: #1f2230;
        --muted: #6e7280;
        --accent: #466b8f; /* deep teal */
        --accent2: #c5a880; /* warm historic gold */
        --radius: 14px;
        --shadow: 0 30px 70px -10px rgba(70, 107, 143, 0.15);
        --transition: 0.35s cubic-bezier(.3,.15,.25,1);
        --heading: "Cinzel", serif;
        --subheading: "Playfair Display", serif;
        --body: "Spectral", serif;
      }

      /* Subtle stone texture overlay */
      body {
        margin: 0;
        font-family: var(--body);
        background: var(--bg);
        color: var(--text);
        scroll-behavior: smooth;
        position: relative;
        padding-bottom: 120px;
        overflow-x: hidden;
      }
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        pointer-events: none;
        background: url('https://www.transparenttextures.com/patterns/white-carbon.png') repeat;
        opacity: 0.15;
        mix-blend-mode: overlay;
      }

      * { box-sizing: border-box; }

      a { color: var(--accent); text-decoration: none; position: relative; }
      a:hover { text-decoration: underline; }

      .container {
        max-width: 1080px;
        margin: 0 auto;
        padding: 1.5rem 1rem 4rem;
      }

      /* Sticky mini-TOC */
      .mini-nav {
        position: sticky;
        top: 0;
        background: rgba(243, 244, 247, 0.95);
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
        padding: 10px;
        border-radius: 999px;
        margin-bottom: 1rem;
        font-size: 0.85rem;
        z-index: 10;
      }
      .mini-nav a {
        padding: 8px 14px;
        border-radius: 999px;
        font-weight: 600;
        transition: background var(--transition);
      }
      .mini-nav a.active,
      .mini-nav a:hover {
        background: var(--accent);
        color: white;
      }

      .hero {
        text-align: center;
        padding: 1rem 0 2rem;
        position: relative;
        overflow: visible;
      }
      .hero h1 {
        font-family: var(--subheading);
        font-size: 3.8rem;
        margin: 0;
        color: var(--accent2);
      }
      .subtitle {
        margin: 8px auto 16px;
        max-width: 720px;
        font-size: 1.1rem;
        color: var(--muted);
        line-height: 1.4;
      }

      .card {
        background: var(--card);
        border-radius: var(--radius);
        padding: 1.25rem 1.5rem;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: transform var(--transition), box-shadow var(--transition), opacity 0.6s ease, filter 0.3s ease;
        opacity: 0;
        transform: translateY(12px);
      }
      .card.visible {
        opacity: 1;
        transform: translateY(0);
      }
      .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 40px 100px -10px rgba(70, 107, 143, 0.25);
      }
      .card h3 {
        margin: 0 0 8px;
        font-family: var(--heading);
        font-size: 1.4rem;
        color: #1f2230;
      }
      .card p {
        margin: 0;
        font-size: 0.95rem;
        color: #444;
      }

      .label {
        display: inline-block;
        background: var(--accent2);
        color: #2d2d2d;
        padding: 5px 14px;
        border-radius: 999px;
        font-size: 0.55rem;
        font-weight: 600;
        margin-bottom: 8px;
        letter-spacing: 0.5px;
      }

      /* Don't Miss pills */
      .pill-list {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin: 12px 0 6px;
      }
      .pill {
        background: var(--accent);
        color: white;
        padding: 10px 18px;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.8rem;
      }

      /* Postcard flip */
      .postcards {
        display: flex;
        gap: 18px;
        flex-wrap: wrap;
        margin: 2rem 0;
        justify-content: center;
      }
      .postcard {
        width: 300px;
        height: 200px;
        perspective: 1000px;
        position: relative;
      }
      .postcard-inner {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 14px;
        transition: transform 0.8s;
        transform-style: preserve-3d;
        box-shadow: 0 35px 80px -10px rgba(0, 0, 0, 0.12);
      }
      .postcard:hover .postcard-inner {
        transform: rotateY(180deg);
      }
      .postcard-face {
        position: absolute;
        inset: 0;
        border-radius: 14px;
        backface-visibility: hidden;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
      }
      .postcard-front {
        background: #fff;
      }
      .postcard-front img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }
      .postcard-back {
        background: var(--accent);
        color: white;
        transform: rotateY(180deg);
        padding: 16px;
        font-size: 0.85rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .postcard-back .title {
        font-family: var(--subheading);
        font-size: 1rem;
        margin: 0 0 6px;
      }
      .postcard-back .note {
        flex: 1;
        margin: 4px 0 0;
        font-size: 0.75rem;
        line-height: 1.2;
      }

      /* Saved itinerary toolbar */
      .itinerary-toolbar {
        background: var(--card);
        position: sticky;
        bottom: 16px;
        right: 16px;
        padding: 14px 18px;
        border-radius: 12px;
        box-shadow: 0 25px 70px -5px rgba(70, 107, 143, 0.3);
        display: none;
        gap: 12px;
        flex-wrap: wrap;
        z-index: 20;
        max-width: 360px;
        font-size: 0.85rem;
      }
      .itinerary-toolbar.active {
        display: flex;
      }
      .itinerary-summary {
        flex: 1;
      }
      .itinerary-actions {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
      }
      .mini-itin-badge {
        background: var(--accent2);
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.6rem;
        display: inline-block;
        margin-bottom: 6px;
      }

      .btn {
        background: var(--accent);
        color: white;
        border: none;
        padding: 9px 16px;
        border-radius: 999px;
        cursor: pointer;
        font-weight: 600;
        font-size: 0.8rem;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 6px;
      }
      .btn.sm {
        padding: 6px 12px;
        font-size: 0.7rem;
      }
      .btn:hover {
        filter: brightness(1.05);
      }

      .save-heart {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 26px;
        height: 26px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
      }
      .save-heart svg {
        width: 18px;
        height: 18px;
        stroke: var(--accent);
        fill: transparent;
        stroke-width: 2;
        transition: all 0.3s ease;
      }
      .save-heart.saved svg {
        fill: var(--accent);
        stroke: #fff;
      }
      .save-heart.bounce {
        animation: bounce 0.45s ease;
      }
      @keyframes bounce {
        0% { transform: scale(1); }
        30% { transform: scale(1.3); }
        60% { transform: scale(0.95); }
        100% { transform: scale(1); }
      }

      /* Section headings */
      .section {
        margin: 3.5rem 0;
      }
      .section h2 {
        font-family: var(--heading);
        font-size: 2.6rem;
        margin-bottom: 4px;
        position: relative;
        display: inline-block;
      }
      .section h2::after {
        content: "";
        display: block;
        height: 4px;
        width: 70px;
        background: var(--accent);
        border-radius: 2px;
        margin-top: 8px;
      }
      .desc {
        margin: 8px 0 16px;
        max-width: 800px;
        color: var(--muted);
      }

      /* Things to do (replaces map) */
      .events-grid {
        display: grid;
        gap: 1.25rem;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      }
      .event-card {
        background: white;
        border-radius: var(--radius);
        padding: 1rem 1.25rem;
        position: relative;
        box-shadow: var(--shadow);
      }
      .event-card h4 {
        margin: 0 0 6px;
        font-family: var(--subheading);
        font-size: 1.1rem;
      }
      .event-card small {
        display: block;
        margin-bottom: 6px;
        color: #555;
      }

      /* WhatsApp itinerary form */
      .itinerary-box {
        background: var(--card);
        border-radius: var(--radius);
        padding: 1.5rem 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 14px;
        box-shadow: var(--shadow);
        position: relative;
      }
      .itinerary-box h3 {
        margin: 0;
        font-family: var(--heading);
        font-size: 1.8rem;
        color: #1f2230;
      }
      .itinerary-fields {
        display: flex;
        gap: 14px;
        flex-wrap: wrap;
      }
      .field {
        flex: 1;
        min-width: 140px;
        display: flex;
        flex-direction: column;
      }
      .field label {
        font-size: 0.65rem;
        font-weight: 600;
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        color: #666;
      }
      .field select,
      .field input {
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 0.95rem;
        outline: none;
      }

      /* Responsive tweaks */
      @media (max-width: 960px) {
        .grid, .events-grid {
          grid-template-columns: 1fr;
        }
        .postcards {
          flex-direction: column;
        }
        .mini-nav {
          justify-content: flex-start;
          overflow-x: auto;
        }
      }
    </style>
  </head>

