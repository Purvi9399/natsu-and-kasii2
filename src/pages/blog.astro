--
const pageTitle = "Travel Vlogs";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{pageTitle} · Natsukashii</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg: #fff8fb;              /* blush */
      --bg-2:#fefcf7;             /* cream */
      --ink:#3e3a3a;              /* warm charcoal */
      --muted:#807676;
      --accent:#f4b8c3;           /* pink */
      --accent-2:#c9e4de;         /* mint */
      --accent-3:#f7e8b7;         /* butter */
      --accent-4:#d9c6f0;         /* lilac */
      --chip:#ffeaf0;             /* soft chip bg */
      --card:#ffffff;             /* card bg */
      --shadow: 0 10px 30px rgba(0,0,0,.06);
      --radius: 22px;
    }
    html,body{margin:0;padding:0;background:linear-gradient(180deg,var(--bg),var(--bg-2));color:var(--ink);font-family:Quicksand,system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Noto Sans,'Helvetica Neue',Arial,sans-serif;}
    a{color:inherit;text-decoration:none}

    /* Sticky pastel nav */
    .nav{position:sticky;top:0;z-index:20;background:rgba(255,248,251,.7);backdrop-filter: blur(8px);border-bottom:1px solid rgba(0,0,0,.04)}
    .nav-inner{max-width:1100px;margin:auto;padding:14px 20px;display:flex;align-items:center;gap:14px}
    .brand{font-family:'Playfair Display',serif;font-weight:600;font-size:20px;letter-spacing:.3px}
    .spacer{flex:1}
    .nav a.btn{padding:8px 14px;border-radius:999px;background:var(--accent);box-shadow:var(--shadow)}

    /* Hero */
    .hero{max-width:1100px;margin:34px auto 18px;padding:0 20px}
    .eyebrow{display:inline-block;padding:6px 12px;border-radius:999px;background:var(--accent-2);font-size:12px;font-weight:700;letter-spacing:.6px;text-transform:uppercase}
    h1{margin:12px 0 8px;font-family:'Playfair Display',serif;font-size:44px;line-height:1.15}
    .tagline{font-size:16px;color:var(--muted)}

    /* Story bubbles */
    .stories{max-width:1100px;margin:18px auto 8px;padding:0 20px;display:flex;gap:14px;overflow:auto}
    .bubble{min-width:86px;width:86px;text-align:center}
    .bubble .img{width:86px;height:86px;border-radius:999px;background:#fff;box-shadow:var(--shadow);padding:6px;display:grid;place-items:center;border:2px dashed rgba(0,0,0,.05)}
    .bubble img{width:100%;height:100%;object-fit:cover;border-radius:999px}
    .bubble label{display:block;margin-top:6px;font-size:12px;color:var(--muted)}

    /* Toolbar */
    .toolbar{max-width:1100px;margin:18px auto;padding:0 20px;display:flex;flex-wrap:wrap;gap:10px;align-items:center}
    .search{flex:1;min-width:200px;display:flex;align-items:center;gap:10px;background:#fff;border-radius:999px;padding:10px 14px;box-shadow:var(--shadow)}
    .search input{border:0;outline:0;width:100%;font-size:14px;background:transparent}
    .chips{display:flex;gap:8px;flex-wrap:wrap}
    .chip{padding:8px 12px;border-radius:999px;background:var(--chip);border:1px solid rgba(0,0,0,.05);font-size:13px;cursor:pointer;user-select:none}
    .chip.active{background:var(--accent-4)}

    /* Masonry grid */
    .masonry{max-width:1100px;margin:8px auto 80px;padding:0 20px;column-count:3;column-gap:18px}
    @media(max-width:980px){.masonry{column-count:2}}
    @media(max-width:620px){.masonry{column-count:1}}
    .card{break-inside:avoid;border-radius:var(--radius);background:var(--card);margin:0 0 18px;box-shadow:var(--shadow);overflow:hidden;position:relative}
    .thumb{position:relative;overflow:hidden}
    .thumb img{display:block;width:100%;height:auto;transition:transform .5s ease}
    .card:hover .thumb img{transform:scale(1.04)}
    .badge{position:absolute;top:12px;left:12px;background:rgba(255,255,255,.85);border-radius:999px;padding:6px 10px;font-size:12px;box-shadow:var(--shadow)}
    .content{padding:16px}
    .title{font-weight:700;font-size:18px;margin:0 0 6px;font-family:'Playfair Display',serif}
    .meta{font-size:12px;color:var(--muted);margin-bottom:10px}
    .excerpt{font-size:14px;line-height:1.45;margin:0 0 12px}
    .tags{display:flex;gap:8px;flex-wrap:wrap;margin-top:8px}
    .tag{font-size:12px;background:var(--accent-3);padding:6px 10px;border-radius:999px}
    .actions{display:flex;gap:10px}
    .btn{display:inline-flex;align-items:center;gap:8px;background:var(--accent);padding:10px 14px;border-radius:14px;font-weight:600;box-shadow:var(--shadow)}
    .btn.ghost{background:var(--accent-2)}

    /* Lightbox */
    .lightbox{position:fixed;inset:0;background:rgba(0,0,0,.45);display:none;align-items:center;justify-content:center;padding:20px;z-index:50}
    .lightbox.open{display:flex}
    .lightbox .box{background:#fff;border-radius:18px;max-width:900px;width:100%;box-shadow:var(--shadow);overflow:hidden}
    .lightbox header{display:flex;align-items:center;justify-content:space-between;padding:12px 14px;border-bottom:1px solid rgba(0,0,0,.06)}
    .lightbox .body{max-height:70vh;overflow:auto}
    .lightbox img{width:100%;display:block}
    .close{cursor:pointer;border:0;background:#0000;font-size:22px;padding:6px}

    /* Footer CTA */
    .cta{max-width:900px;margin:0 auto 80px;padding:20px;border-radius:20px;background:linear-gradient(135deg,var(--accent-2),var(--accent-4));box-shadow:var(--shadow);text-align:center}
    .cta h3{margin:0 0 8px;font-family:'Playfair Display',serif}
    .cta p{margin:0 0 14px;color:#3e3a3a}
  </style>
</head>
