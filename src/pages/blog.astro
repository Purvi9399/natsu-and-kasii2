  <!-- GSAP -->
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
  <script>
    // Simple search & filter
    const search = document.getElementById('search');
    const chips = document.getElementById('chips');
    const grid = document.getElementById('grid');
    const cards = Array.from(grid.querySelectorAll('.card'));
    let activeFilter = 'All';

    function applyFilters(){
      const q = (search.value||'').toLowerCase();
      cards.forEach(c=>{
        const tags = (c.dataset.tags||'').toLowerCase();
        const region = (c.dataset.region||'').toLowerCase();
        const text = (c.textContent||'').toLowerCase();
        const matchesText = !q || text.includes(q) || tags.includes(q);
        const matchesFilter = activeFilter==='All' || region===activeFilter.toLowerCase() || tags.includes(activeFilter.toLowerCase());
        c.style.display = (matchesText && matchesFilter) ? '' : 'none';
      });
    }

    search.addEventListener('input', applyFilters);
    chips.addEventListener('click', (e)=>{
      const chip = e.target.closest('.chip');
      if(!chip) return;
      chips.querySelectorAll('.chip').forEach(x=>x.classList.remove('active'));
      chip.classList.add('active');
      activeFilter = chip.dataset.filter || 'All';
      applyFilters();
    });

    // Story bubbles act like filters
    document.getElementById('stories').addEventListener('click', (e)=>{
      const b = e.target.closest('.bubble');
      if(!b) return;
      const f = b.dataset.filter;
      activeFilter = f;
      chips.querySelectorAll('.chip').forEach(x=>{
        x.classList.toggle('active', x.dataset.filter===f);
      });
      if(f==='All') chips.querySelector('.chip[data-filter="All"]').classList.add('active');
      applyFilters();
    });

    // Lightbox
    const lb = document.getElementById('lightbox');
    const lbClose = document.getElementById('lb-close');
    const lbImg = document.getElementById('lb-img');
    const lbTitle = document.getElementById('lb-title');
    const lbLink = document.getElementById('lb-link');

    grid.addEventListener('click', (e)=>{
      const btn = e.target.closest('.open-lightbox');
      if(!btn) return;
      e.preventDefault();
      lbImg.src = btn.dataset.image;
      lbTitle.textContent = btn.dataset.title || 'Vlog';
      lbLink.href = btn.dataset.link || '#';
      lb.classList.add('open');
      lb.setAttribute('aria-hidden','false');
    });
    lbClose.addEventListener('click', ()=>{
      lb.classList.remove('open');
      lb.setAttribute('aria-hidden','true');
    });
    lb.addEventListener('click', (e)=>{ if(e.target===lb) lbClose.click(); });

    // GSAP animations
    window.addEventListener('load', ()=>{
      gsap.from('.eyebrow',{opacity:0,y:12,duration:.6,delay:.1});
      gsap.from('h1',{opacity:0,y:10,duration:.6,delay:.2});
      gsap.from('.tagline',{opacity:0,y:10,duration:.6,delay:.3});
      gsap.from('.bubble',{opacity:0,y:14,stagger:.05,duration:.4,delay:.35});
      gsap.from('.toolbar .search, .toolbar .chip',{opacity:0,y:12,stagger:.04,duration:.35,delay:.45});
      gsap.from('.card',{opacity:0,y:20,stagger:.06,duration:.5,delay:.6});
    });
  </script>
